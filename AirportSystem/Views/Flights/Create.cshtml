@model AirportSystem.Models.Flight

@{
    ViewData["Title"] = "Създай полет";
}

<h2 class="mb-4"><i class="fa-solid fa-plane me-2"></i>Създай нов полет</h2>

<div class="card shadow border-0 rounded-4 form-card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FlightNumber" class="form-label fw-semibold"></label>
                    <input asp-for="FlightNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Airline" class="form-label fw-semibold"></label>
                    <input asp-for="Airline" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="DepartureTime" class="form-label fw-semibold"></label>
                    <input asp-for="DepartureTime" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ArrivalTime" class="form-label fw-semibold"></label>
                    <input asp-for="ArrivalTime" class="form-control" />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="DepartureAirportId" class="form-label fw-semibold"></label>
                    <select asp-for="DepartureAirportId" class="form-select" asp-items="ViewBag.DepartureAirportId"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="ArrivalAirportId" class="form-label fw-semibold"></label>
                    <select asp-for="ArrivalAirportId" class="form-select" asp-items="ViewBag.ArrivalAirportId"></select>
                </div>
            </div>

            <!-- Buttons -->
            <button type="submit" class="btn btn-primary me-2">
                <i class="fa-solid fa-plus me-1"></i>Създай
            </button>
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
