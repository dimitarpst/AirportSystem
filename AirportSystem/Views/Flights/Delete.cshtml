@model AirportSystem.Models.Flight

@{
    ViewData["Title"] = "Изтрий полет";
}

<h2 class="mb-4 text-danger"><i class="fa-solid fa-trash me-2"></i>Изтрий полет</h2>

<div class="card shadow border-0 rounded-4 form-card">
    <div class="card-body">
        <p class="fw-bold">Сигурни ли сте, че искате да изтриете този полет?</p>

        <dl class="row mb-3">
            <dt class="col-sm-4 fw-semibold">Номер на полет</dt>
            <dd class="col-sm-8">@Model.FlightNumber</dd>

            <dt class="col-sm-4 fw-semibold">Авиолиния</dt>
            <dd class="col-sm-8">@Model.Airline</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash me-1"></i>Изтрий
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
