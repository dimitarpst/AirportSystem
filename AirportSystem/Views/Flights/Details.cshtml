@model AirportSystem.Models.Flight

@{
    ViewData["Title"] = "Детайли за полет";
}

<h2 class="mb-4"><i class="fa-solid fa-circle-info me-2"></i>Детайли за полет</h2>

<div class="card shadow border-0 rounded-4 form-card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Номер на полет</dt>
            <dd class="col-sm-8">@Model.FlightNumber</dd>

            <dt class="col-sm-4 fw-semibold">Авиолиния</dt>
            <dd class="col-sm-8">@Model.Airline</dd>

            <dt class="col-sm-4 fw-semibold">Заминаване</dt>
            <dd class="col-sm-8">
                @Model.DepartureAirport?.Name
                (<span class="text-muted">@Model.DepartureTime.ToString("dd.MM.yyyy HH:mm")</span>)
            </dd>

            <dt class="col-sm-4 fw-semibold">Пристигане</dt>
            <dd class="col-sm-8">
                @Model.ArrivalAirport?.Name
                (<span class="text-muted">@Model.ArrivalTime.ToString("dd.MM.yyyy HH:mm")</span>)
            </dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="fa-solid fa-pen-to-square me-1"></i>Редактирай
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Назад</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
