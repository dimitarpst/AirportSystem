@model AirportSystem.Models.Airport

@{
    ViewData["Title"] = "Добавяне на летище";
}

<section class="text-center mb-5">
    <h1 class="display-4 fw-bold text-flight-header mb-4">
        <i class="bi bi-building-add"></i> Добавяне на ново летище
    </h1>
    <p class="lead text-muted">Попълнете подробностите, за да добавите ново летище към системата</p>
</section>

<div class="container px-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Поле за име на летището -->
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-bold">Име на летището</label>
                        <input asp-for="Name" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Въведете име на летището" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Поле за местоположение -->
                    <div class="form-group mb-4">
                        <label asp-for="Location" class="form-label fw-bold">Местоположение</label>
                        <input asp-for="Location" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Въведете местоположение" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <!-- Бутон за създаване -->
                    <div class="text-center">
                        <input type="submit" value="Добавяне на летище" class="btn btn-primary btn-lg shadow-sm rounded-pill px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Бутон за връщане към списъка -->
<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm px-4">
        <i class="bi bi-arrow-left"></i> Обратно към списъка
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
