@model IEnumerable<AirportSystem.Models.Airport>

@{
    ViewData["Title"] = "Airports";
}

<section class="text-center mb-5">
    <h1 class="display-4 fw-bold text-flight-header">
        <i class="bi bi-map-fill"></i> Летища 
    </h1>
</section>
<div class="mb-4">
    <input type="text" id="spotlightSearchInput" class="form-control form-control-lg" placeholder="Потърси полети...">
</div>

<div class="text-center mb-5">
    <a asp-action="Create" class="btn btn-airport">
        <i class="bi bi-plus-circle-dotted"></i> Добави летище
    </a>
</div>

<div class="container-fluid px-lg-5">
    <div class="row g-4" id="card-list-container">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 card-container">
                <div class="airport-board shadow-lg rounded-4 p-4 position-relative overflow-hidden" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef);">
                    <div class="airport-board-header d-flex align-items-center justify-content-between mb-3">
                        <h5 class="fw-bold mb-0">
                            <i class="bi bi-geo-alt-fill text-danger me-2"></i> @item.Name
                        </h5>
                        <span class="badge bg-gradient-info text-dark shadow-sm">Активни</span>
                    </div>
                    <div class="airport-board-body mb-4">
                        <p class="mb-1">
                            <strong>Локация:</strong> @item.Location
                        </p>
                    </div>
                    <div class="airport-board-footer d-flex justify-content-around">
                        <!-- Details Button with Icon -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary shadow-sm rounded-pill px-3">
                            <i class="bi bi-info-circle"></i> Детайли
                        </a>
                        <!-- Edit Button with Icon -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning shadow-sm rounded-pill px-3">
                            <i class="bi bi-pencil"></i> Редактирай
                        </a>
                        <!-- Delete Button with Icon -->
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger shadow-sm rounded-pill px-3">
                            <i class="bi bi-trash"></i> Изтрий
                        </a>
                    </div>
                    <!-- Icon in Background -->
                    <div class="airport-card-bg" style="position: absolute; bottom: -30px; right: -30px; opacity: 0.05; font-size: 5rem;">
                        <i class="bi bi-airplane-engines"></i>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
