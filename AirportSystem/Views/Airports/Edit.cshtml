@model AirportSystem.Models.Airport

@{
    ViewData["Title"] = "Редактиране";
}

<section class="text-center mb-5">
    <h1 class="display-4 fw-bold text-warning mb-4">
        <i class="bi bi-pencil-square"></i> Редактиране на летище
    </h1>
    <p class="lead text-muted">Актуализирайте данните на избраното летище</p>
</section>

<div class="container px-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4 mb-4">
                <h4 class="fw-bold text-warning mb-3">
                    <i class="bi bi-geo-alt-fill me-2"></i> Информация за летището
                </h4>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-bold">Име</label>
                        <input asp-for="Name" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Въведете името на летището" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Location" class="form-label fw-bold">Местоположение</label>
                        <input asp-for="Location" class="form-control form-control-lg rounded-pill shadow-sm" placeholder="Въведете местоположение" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning btn-lg shadow-sm rounded-pill px-5">
                            <i class="bi bi-save"></i> Запази промените
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm px-4 ms-3">
                            <i class="bi bi-arrow-left"></i> Обратно към списъка
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
