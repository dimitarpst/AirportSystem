@model AirportSystem.Models.Airport

@{
    ViewData["Title"] = "Детайли за летището";
}

<section class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary mb-4">
        <i class="bi bi-info-circle"></i> Детайли за летището
    </h1>
    <p class="lead text-muted">Разгледайте подробностите за избраното летище</p>
</section>

<div class="container px-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4 mb-4">
                <h4 class="fw-bold text-primary mb-3">
                    <i class="bi bi-geo-alt-fill me-2"></i> Информация за летището
                </h4>
                <dl class="row">
                    <dt class="col-sm-4">Име</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4">Местоположение</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
                </dl>
                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary rounded-pill shadow-sm px-4">
                        <i class="bi bi-pencil-square"></i> Редактирай
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm px-4 ms-2 back-btn">
                        <i class="bi bi-arrow-left"></i> Обратно към списъка
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>