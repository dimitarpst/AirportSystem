@model AirportSystem.Models.Airport

@{
    ViewData["Title"] = "Изтриване на летище";
}

<section class="text-center mb-5">
    <h1 class="display-4 fw-bold text-danger mb-4">
        <i class="bi bi-trash3"></i> Изтриване на летище
    </h1>
    <p class="lead text-muted">Сигурни ли сте, че искате да изтриете това летище?</p>
</section>

<div class="container px-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 p-4 mb-4">
                <h4 class="fw-bold text-danger mb-3">
                    <i class="bi bi-geo-alt-fill me-2"></i> Детайли за летището
                </h4>
                <dl class="row">
                    <dt class="col-sm-4">Име</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4">Местоположение</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
                </dl>
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger btn-lg shadow-sm rounded-pill px-5">
                            <i class="bi bi-trash3"></i> Потвърди изтриване
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm px-4 ms-2 back-btn">
                            <i class="bi bi-arrow-left"></i> Обратно към списъка
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .back-btn {
        font-size: 0.9rem;
        padding: 0.5rem 1.5rem;
    }

        .back-btn:hover {
            background-color: #f8f9fa;
            border-color: #ccc;
            color: #333;
        }
</style>
